from signal import signal, SIGTERM, SIGHUP, pause
from gpiozero import Servo, Button
from time import sleep

def safe_exit(signum, frame):
    exit(1)

def move_left():
    if left.held_time > (right.held_time or 0):
        if servo.value > -1:
            servo.value -= 0.01

def move_right():
    if right.held_time > (left.held_time or 0):
        if servo.value < 1:
            servo.value += 0.01

servo = Servo(8, min_pulse_width=0.4/1000, max_pulse_width=2.5/1000)
left = Button(9, hold_time=0.01, hold_repeat=True)
right = Button(10, hold_time=0.01, hold_repeat=True)

try:
    signal(SIGTERM, safe_exit)
    signal(SIGHUP, safe_exit)

    left.when_held = move_left
    right.when_held = move_right

    pause()

except KeyboardInterrupt:
    pass

finally:
    servo.mid()
    sleep(0.5)
    servo.close()   